@model MovieRental.Domain.Models.Movie
@using MovieRental.Domain.Models

@{
    ViewData["Title"] = "Movie Details";
    var user = ViewBag.LoggedInUser as User;
    bool hasActiveRental = ViewBag.HasActiveRental != null && (bool)ViewBag.HasActiveRental;
}

<h1>@Model.Title</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card bg-dark text-white mt-3">
    <div class="card-body">
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Language:</strong> @Model.Language</p>
        <p><strong>Release Date:</strong> @Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Duration:</strong> @string.Format("{0:%h}h {0:%m}m", Model.Length)</p>
        <p><strong>Age Restriction:</strong> @($"{Model.AgeRestriction}+")</p>
        <p><strong>Quantity:</strong> @Model.Quantity</p>
        <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>
    </div>
</div>

@if (user != null)
{
    if (hasActiveRental)
    {
        <form asp-action="Return" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-warning">Return</button>
        </form>
    }
    else
    {
        if (Model.Quantity > 0)
        {
            <form asp-action="Rent" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-success">Rent</button>
            </form>
        }
        else
        {
            <p class="mt-3"><em>This movie is currently not available for rent.</em></p>
        }
    }
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</div>
