@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "My Rentals";
    var justReturnedId = ViewBag.JustReturnedId as int?;
}

<h2 class="mb-4">My Active Rentals</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-dark table-striped align-middle">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Rented On</th>
            <th>Returned On</th>
            <th style="width:140px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            bool isReturned = item.IsReturned;
            bool isJustReturned = justReturnedId.HasValue && (int)@item.RentalId == justReturnedId.Value;
            string rowClass = isReturned || isJustReturned ? "table-warning" : "";

            <tr class="@rowClass">
                <td>@item.Title</td>
                <td>@item.Genre</td>
                <td>@(((DateTime)item.RentedOn).ToString("yyyy-MM-dd HH:mm"))</td>
                <td>
                    @if (item.ReturnedOn == null)
                    {
                        <span class="text-muted">—</span>
                    }
                    else
                    {
                        @(((DateTime)item.ReturnedOn).ToString("yyyy-MM-dd HH:mm"))
                    }
                </td>
                <td>
                    @if (isReturned)
                    {
                        <span class="badge bg-secondary">Returned</span>
                    }
                    else
                    {
                        <form asp-action="Return" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="rentalId" value="@item.RentalId" />
                            <input type="hidden" name="movieId" value="@item.MovieId" />
                            <button type="submit" class="btn btn-success btn-sm">Return</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Back</a>
</div>
