@model MovieRental.Dtos.ViewModels.UserLoginViewModel

<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
    }

    footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #333;
        color: white;
        text-align: center;
        padding: 10px 0;
        z-index: 1000;
    }
</style>

<div class="d-flex align-items-center justify-content-center min-vh-100"
     style="background: url('/images/background.jpg') no-repeat center center fixed; background-size: cover;">
    <div class="p-5 rounded shadow"
         style="width: 400px; background-color: #111; color: white; margin-bottom: 320px;">
        <h2 class="mb-5 text-center fw-bold" style="color: #e50914; font-size: 2.5rem;">Log In</h2>

        <form asp-action="Index" method="post" novalidate>
            <div class="mb-4">
                <label asp-for="CardNumber" class="form-label fw-semibold" style="color: white; font-size: 1.1rem;"></label>
                <input asp-for="CardNumber" class="form-control form-control-lg bg-secondary text-white border-0" />
                <span asp-validation-for="CardNumber" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-danger w-100 fw-bold mt-4 btn-lg">
                Log In
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
